<main>

	<section>

		<div id='intro'>

			<h1>The Sword</h1>
			<h2>Which choices speak to you?</h2>

			<div id='form'>
				<div>
					<form id='login-form'>
						<h3>Login</h3>
						<input
							class='form-input'
							type='text'
							id='username-login'
							placeholder='USERNAME'
						/>
						<input
							class='form-input'
							type='password'
							id='password-login'
							placeholder='PASSWORD'
						/>
						<button class='submit' type='submit'>LOG IN</button>
					</form>
				</div>

				<div>
					<form id='signup-form'>
						<h3>Signup</h3>
						<input
							class='form-input'
							type='text'
							id='username-signup'
							placeholder='NEW USERNAME'
						/>
						<input
							class='form-input'
							type='password'
							id='password-signup'
							placeholder='NEW PASSWORD'
						/>
						<button class='submit' type='submit'>sign up</button>
					</form>
				</div>
			</div>

			<footer>

				<h5>UTSA CODING BOOT CAMP 2021-22</h5>
				<p>AN ADVENTURE BY NATASHA ORTIZ, BRIGITTE POWERS, AND GREG
					ZARAGOZA</p>
			</footer>

		</div>

		<div id='image'></div>

	</section>
	<script src='/js/signup.js'></script>
	<script src='/js/login.js'></script>

</main>
<main>

	<h1 class="font-bold animate__animated animate__slower animate__fadeIn">The Sword</h1>

	<div id='form' class='flex lg:flex-row sm:flex-col'>
		<div>
			<form id='login-form'>
				<h3>Log In</h3>
				<input
					class='form-input bg-transparent placeholder-white text-white text-xs tracking-wider border-b border-white outline-none'
					type='text'
					id='username-login'
					placeholder='USERNAME'
				/>
				<input
					class='form-input bg-transparent placeholder-white text-white text-xs tracking-wider border-b border-white outline-none'
					type='password'
					id='password-login'
					placeholder='PASSWORD'
				/>
